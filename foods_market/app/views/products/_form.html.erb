<%= render 'layouts/errors', :object => @product %>

<%= form_for @product, html: {class: 'ui form'} do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </div>
  <div class='form-group'>
    <%= f.label :cost %>
    <br>
    <%= f.text_field :cost %>
  </div>
  <div class='form-group'>
    <%= f.label :origin %>
    <br>
    <%= f.text_field :origin %>
  </div>
  <%= f.submit :class => 'ui positive basic button'%>
<% end %>
